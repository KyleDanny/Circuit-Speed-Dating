

<div class="d-flex justify-content-center">
    <div class="col-sm-6">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ti-icons@0.1.2/css/themify-icons.css">
        <div class="events_area">
            <div class="container">
                <div class="row justify-content-center">

                        <div class="main_title">
                            <h2 class="mb-3 text-black">My Upcoming Sessions
                            <%= link_to  events_path, id: "calendar_btn", class: "btn rounded-pill border" do %>
                                <i class="far fa-calendar-alt"></i>
                            <% end %>
                            </h2>
                        </div>
                </div>
                <div class="booking-grid">
                    <% @my_bookings.each do |booking|%>
                        <div class="">                
                            <div class="single_event position-relative">
                                <div class="event_details">
                                    <div class="d-flex mb-4">
                                        <div class="date"><span><%= booking.event.start_time.strftime("%d")%></span><%= booking.event.end_time.strftime("%b")%></div>
                                        <div class="time-location">
                                            <p><span class="ti-time mr-2"></span><%= booking.event.start_time.strftime("%I:%M%p") %> - <%= booking.event.end_time.strftime("%I:%M%p") %></p>
                                            <p><span class="ti-location-pin mr-2"></span> Online</p>
                                        </div>
                                    </div>
                                    <p id="event_name">
                                    <%= booking.event.name %>
                                    </p>
                                    <div class="delete_button">
                                    <%= link_to "Delete", booking_path(booking), method: :delete, class:"btn rounded-pill",  id: "delete_btn", data: { confirm: "Are you sure you want to delete this?" }%>
                                    </div>
                                </div>
                            </div>                           
                        </div>
                    <% end %>  
                </div>        
            </div>
        </div>
    </div>
</div>
