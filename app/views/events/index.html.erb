<div class="d-flex justify-content-center">

  <div class="col-sm-9 mt-4">

    <div class="row justify-content-center">
       <div class="col-sm-5 mt-3 text-right">
        <p> <%= link_to "My Sessions", bookings_path, class: "btn-red" %> </p>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-sm-10">
        <%= month_calendar(events: @events, end_attribute: :end_time) do |date, events| %>
        <%= date %>

        <% events.each do |event| %>
        <div class="meeting">
          <% if (current_user.events).include?(event) %>
          <p><%= link_to event.name, event_path(event) %></p>
          <% end %>
          <p class=""> <%= event.time %> </p>
          <% if event.bookings.count < event.capacity %>
          <p> <%= link_to "Book!", new_event_booking_path(event) %> </p>
          <% end %>
          <p> Spots: <%= event.bookings.count %>/<%= event.capacity %> </p>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
