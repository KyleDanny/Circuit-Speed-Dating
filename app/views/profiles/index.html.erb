<div class="card-scroll">
  <div class="container">
    <div class="m-3 row justify-content-center">
      <p class="booking_btn"><%= link_to "Join a Session", events_path, class: "btn rounded-pill border" %> </p>
    </div>

    <div class="row justify-content-center">
      <p><%= link_to "All", profiles_path(current_user), class: "btn rounded-pill border" %></p>
      <p><%= link_to "Female", profiles_path(gender:"female"), class: "btn rounded-pill border", id: "booking.btn" %></p>
      <p><%= link_to "Male", profiles_path(gender:"male"), class: "btn rounded-pill border" %></p>
    </div>

    <div class="profile-container">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @users.each do |user| %>
          <div class="carousel-item <%= user == @users.first ? 'active' : '' %>">
            <div class="profile_card">
              <%= cl_image_tag user.photos.first.key, class: "carousel-image" %>
              <div class="profile-name"><p><%= user.name %><span class="profile-position">   <%= user.age %></span>
              <span class="js-heart">
                <% if current_user.likes?(user)%>♥️</span>
                <% else%>
                <%= link_to "Like ❤", profile_likes_path(user.id), class: "btn rounded-pill border mb-2", method: :post, remote: true%></h3>
                <% end %>
              </span>
              </div></p>
              <div class="profile-position"><p><i class="fas fa-location-arrow"></i> <%= user.address %>   <span class="view_btn"><%= link_to "View", profile_path(user), class: "button" %></span></p></div>
            </div>
          </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

