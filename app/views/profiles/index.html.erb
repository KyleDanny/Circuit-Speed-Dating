<div class="d-flex justify-content-center mt-3">

  <div class="col-sm-6">
    <div class="row justify-content-center mt-4">
      <div class="col-sm-10 std-card mt-4">
        <div class="row justify-content-center">
          <div class="col-sm-11 ml-3 mt-4">
            <h2 class="text-danger"> Possible dates for your session </h2>
            <p class="info-tag">Here are some suggested profiles for your possible dates for your dating session. Go like ‚ù§ people you are interested in! </p>
            <br>
            <p><span class="highlight"></span> <%= link_to "Join a Session today !", events_path, class: "btn-red" %></p>
          </div>
        </div>

        <div class="profile-container">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

              <% @users.each do |user| %>
              <div class="carousel-item <%= user == @users.first ? 'active' : '' %>">
                <div class="profile_card"><%= cl_image_tag user.photos.first.key, class: "carousel-image" %>

                  <div>
                    <div class="d-flex justify-space-between mt-3">
                      <div>
                        <span class="profile-name"><%= user.name %> | </span>
                        <span class="profile-name"><%= user.age %></span>
                      </div>
                      <div>
                        <div class="ml-3 mt-2">
                          <span class="js-heart" data-user-id="<%= user.id %>">
                          <% if current_user.likes?(user) %>
                          <span id="heart_btn", class="btn-secondary_you">
                          <i class="fa fa-heart" aria-hidden="true"></i> Liked!
                          </span>
                          </span>
                          <% else%>
                          <%= link_to  profile_likes_path(user.id), class: "btn-red", method: :post, remote: true do %>
                          <i class="fa fa-heart" aria-hidden="true"></i> Like
                          <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>

                    <div class="justify-space-around mt-3">
                        <span class="mr-4"> <i class="fas fa-map-marker-alt"></i> <%= user.address %> </span>
                        <span class=""><%= link_to "View", profile_path(user), class: "btn-outline mt-1" %></span>
                    </div>
                  </div>

                </div>
              </div>
              <% end %>

              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>


  <p><%#= link_to "All", profiles_path(current_user), class: "btn rounded-pill border" %></p>
  <p><%#= link_to "Female", profiles_path(gender:"female"), class: "btn rounded-pill border", id: "booking.btn" %></p>
  <p><%#= link_to "Male", profiles_path(gender:"male"), class: "btn rounded-pill border" %></p>





