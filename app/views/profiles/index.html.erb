<div class="row no-gutters mt-3">
  <div class="col-sm-6">
    <%#= render 'profiles/show' %>
  </div>

  <div class="col-sm-6">
    <div class="row justify-content-center mt-4">
      <div class="col-sm-10 std-card mt-4">
        <div class="row justify-content-center">
          <div class="col-sm-10">
            <h2 class="text-primary"> Possible dates for your session </h2>
            <p class="text-muted">Here are some suggested profiles for your possible dates for your dating session. Go like ‚ù§ people you are interested in! You can like as much as you can. üëâ <strong>Join the session today !</strong> </p>
          </div>
        </div>
        <div class="profile-container mt-4">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

              <% @users.each do |user| %>
              <div class="carousel-item <%= user == @users.first ? 'active' : '' %>">
                <div class="profile_card"><%= cl_image_tag user.photos.first.key, class: "carousel-image" %>
                  <div class="profile-name"><p><%= user.name %>
                    <span class="profile-position">   <%= user.age %></span>
                    
                      <span class="js-heart" data-user-id="<%= user.id %>">
                        <% if current_user.likes?(user)%>
                        <span id="heart_btn", class="btn-secondary_you">
                          <i class="fa fa-heart" aria-hidden="true"></i> You Like!
                        </span>
                        <% else%>
                        <%= link_to  profile_likes_path(user.id), id: "heart_btn", class: "btn-secondary", method: :post, remote: true do %>
                          <i class="fa fa-heart" aria-hidden="true"></i> Like
                        <% end %>
                        <% end %>
                      </span>
                  </div>
                  <div class="profile-position"><p><i class="fas fa-location-arrow"></i> <%= user.address %>   
                  <span class="view_btn"><%= link_to "View", profile_path(user), class: "button" %></span></p></div>
                </div>
              </div>
              <% end %>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-10 text-right">
            <p class=""><%= link_to "Join a Session üëâ", events_path, class: "btn-red" %> </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <p><%= link_to "All", profiles_path(current_user), class: "btn rounded-pill border" %></p>
  <p><%= link_to "Female", profiles_path(gender:"female"), class: "btn rounded-pill border", id: "booking.btn" %></p>
  <p><%= link_to "Male", profiles_path(gender:"male"), class: "btn rounded-pill border" %></p>
</div>




