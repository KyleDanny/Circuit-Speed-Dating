<div class="container">

  <div class="row">
    <% if current_user %>
    <p> <%= link_to "Back", profile_path(current_user), class: "btn rounded-pill border" %> </p>
    <% end %>

    <p> <%= link_to "Start Dating Now!", events_path, class: "btn rounded-pill border" %> </p>
  </div>

  <h1><strong> Find your Match </strong></h1>

  <div class="row">

    <% @users.each do |user| %>
    <div class="col-sm-6">
      <div class="card-product p-2 mb-2 border">
        <% if user.photos.attached? %>
        <% user.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 100 , width: 75, :crop=>"fill", :radius => 20 %>
        <% end %>
        <% end %>
        <div class="card-product-infos">
          <p> <%= link_to user.name, profile_path(user) %> </p>
          <p> <%= user.age %> </p>
          <p> <%= user.gender %> </p>
          <p> <%= user.height %> </p>
          <p> <%= user.address %> </p>
        </div>
      </div>
    </div>
    <% end %>

  </div>


</div>
