<div class="row no-gutters">
  <div class="col-sm-6">
  </div>
  <div class="col-sm-6">
    <div class="row justify-content-center mt-3">
      <div class="col-sm-5 text-left">
        <% if current_user == @user %>
        <% end %>
      </div>
      <div class="col-sm-5 mt-3 text-right">
        <span> <%= link_to "Browse Profiles", profiles_path, class: "btn-red m-2" %> </span>
      </div>
    </div>



    <div class="row justify-content-center mt-4">
      <div class="col-sm-10 p-0">
        <% if @user.photos.attached? %>
        <%= cl_image_tag @user.photos.second.key, height: 200 , width: 590, :crop=>"fill", class: " profile-banner" %>
        <% end %>
    </div>

      <div class="col-sm-10" style="position:absolute;">
        <% if @user.photos.attached? %>
        <%= cl_image_tag @user.photos.first.key, :gravity=>"face", :crop=>"fill", class: "avatar" %>
        <% end %>
      </div>
    </div>

    <div class="row justify-content-center mt-2">
      <div class="col-sm-10 std-card d-flex">
        <div class="col-sm-4 align-self-center">

          <% if current_user == @user%>
            <h3> <%= @user.name %> | <%= link_to "⚡️" %> </h3>
          <% else%>
            <h3> <%= @user.name %> | <%= link_to "⚡️" %> </h3>
            <span class="js-heart" data-user-id="<%= @user.id %>">
              <% if current_user.likes?(@user)%> 
                <span id="heart_btn", class="btn-secondary_you">
                  <i class="fa fa-heart" aria-hidden="true"></i> You Like!
                </span>
              <% else%>
                <%= link_to  profile_likes_path(@user.id), id: "heart_btn", class: "btn-secondary ", method: :post, remote: true do %>
                  <i class="fa fa-heart" aria-hidden="true"></i> Like
                <% end %>
              <% end %> 
            </span>
          <% end %>
        </div>

        <div class="col-sm-8">
          <div class="row justify-content-between mt-2">
            <h3> Hey! I'm <%= @user.name %>! </h3>
            <% if current_user == @user %>
            <%= link_to "", edit_user_registration_path, class: "far fa-edit m-2" %>
            <% end %>
          </div>
          <div class="row">
            <p class="text-muted"> <i class="fas fa-envelope-open-text" style="color: #F44235"></i> <%= @user.description %> </p>
          </div>
          <div class="row">
            <div class="col-sm-5 justify-content-between">
              <p> <i class="fas fa-birthday-cake" style="color: #F44235"></i> <%= @user.age %> </p>
              <p> <i class="fas fa-male" style=" color: #F44235"></i> <%= @user.gender %> </p>
            </div>
            <div class="col-sm-5 justify-content-between">
              <p> <i class="fas fa-heading" style="color: #F44235"></i> <%= @user.height %> </p>
              <p> <i class="fas fa-birthday-cake" style="color: #F44235"></i> <%= @user.age %> </p>
              <p> <i class="fas fa-location-arrow" style="color: #F44235"></i> <%= @user.address %> </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mt-2 mb-4">
      <div class="col-sm-10 std-card">
        <div class="row p-2 ml-2 justify-content-between">
          <h3> Interests </h3>
          <% if current_user == @user %>
          <%= link_to "", new_user_interests_path, class: "far fa-edit mr-3 mt-2" %>
          <% end %>
        </div>

        <div class="p-2 ml-2">
          <h5 class="interest_title"> <i class="fas fa-user-tie" style="color: #167FFB"></i> Business </h5>
          <div class="d-flex flex-wrap">
            <% @user.interests_category("business").each do |interest| %>
            <p class="profile-interest"><%= interest.name %></p>
          <% end %>
          </div>
        </div>

        <div class="p-2 ml-2">
          <h5 class="interest_title"> <i class="fas fa-gamepad" style="color: #167FFB"></i> Entertainment </h5>
          <div class="d-flex flex-wrap">
            <% @user.interests_category("entertainment").each do |interest| %>
            <p class="profile-interest"><%= interest.name  %></p>
          <% end %>
          </div>
        </div>

        <div class="p-2 ml-2">
          <h5 class="interest_title"> <i class="fas fa-vest" style="color: #167FFB"></i> Fashion </h5>
          <div class="d-flex flex-wrap">
            <% @user.interests_category("fashion").each do |interest| %>
