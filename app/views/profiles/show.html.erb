          </div>
        </div>

        <div class="p-2 ml-2">
          <h5 class="interest_title"> <i class="fas fa-photo-video" style="color: #167FFB"></i> Movies </h5>
          <div class="d-flex flex-wrap">
            <% @user.interests_category("movies").each do |interest| %>
            <p class="profile-interest"><%= interest.name  %></p>
          <% end %>
          </div>
        </div>

        <div class="p-2 ml-2">
          <h5 class="interest_title"> <i class="fas fa-music" style="color: #167FFB"></i> Music </h5>
          <div class="d-flex flex-wrap">
            <% @user.interests_category("music").each do |interest| %>
            <p class="profile-interest"><%= interest.name  %></p>
          <% end %>
          </div>
        </div>

        <div class="p-2 ml-2">
          <h5 class="interest_title"> <i class="fas fa-skiing-nordic" style="color: #167FFB"></i> Outdoors </h5>
          <div class="d-flex flex-wrap">
            <% @user.interests_category("outdoors").each do |interest| %>
            <p class="profile-interest"><%= interest.name  %></p>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>












