
<h1 class="interests-header">Your Interests</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 m-5 card">

      <%= simple_form_for [ @user, @user_interest ] do |f| %>
        <%= f.input :interest, collection: Interest.all, input_html: { multiple: true, class: 'multiple-select select2' }, include_hidden: false %>
        <%= f.submit "Create Interests", class: 'form-control' %>
      <% end %>

    </div>
  </div>
</div>

